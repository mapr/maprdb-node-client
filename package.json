{
  "name": "mapr-node-bindings",
  "version": "1.0.0",
  "description": "",
  "main": "./dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "mocha -r ts-node/register --watch-extensions ts test/**/*.ts -w",
    "clean": "rm -rf ./dist/* && rm -rf ./test/dist/*",
    "prepare": "npm run build",
    "proto": "mkdir -p ./dist/proto && pbjs -t static-module -w commonjs ./proto/maprdb-server.proto | pbts -o ./dist/proto/index.d.ts -",
    "proto:dev": "pbjs -t static-module -w commonjs ./proto/maprdb-server.proto | pbts -o ./proto/index.d.ts -",
    "build": "npm run proto && ntsc -p tsconfig.release.json",
    "watch": "ntsc -w",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "lint-fix": "tslint -c tslint.json -p tsconfig.json --fix"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^5.0.0",
    "grpc": "^1.8.4",
    "grpc-health-check": "^1.6.6",
    "ntypescript": "^1.201706190042.1"
  },
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/mocha": "^2.2.48",
    "@types/node": "^9.4.0",
    "chai": "^4.1.2",
    "jest": "^22.1.4",
    "mocha": "^5.0.1",
    "protobufjs": "^6.8.5",
    "ts-node": "^4.1.0",
    "tslint": "^5.9.1",
    "tslint-microsoft-contrib": "^5.0.2",
    "tsutils": "^2.21.0",
    "typescript": "^2.7.1"
  }
}
